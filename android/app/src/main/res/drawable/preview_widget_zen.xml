<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sade beyaz arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#FAFAFA" />
        </shape>
    </item>
    
    <!-- İnce border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>
    
    <!-- Üst bar - mavi -->
    <item android:top="15dp" android:left="20dp" android:right="20dp" android:bottom="65dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#402196F3" />
        </shape>
    </item>
    
    <!-- Orta - sayaç -->
    <item android:top="35dp" android:left="20dp" android:right="30dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#50212121" />
        </shape>
    </item>
    
    <!-- Alt bar -->
    <item android:top="75dp" android:left="20dp" android:right="60dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#30757575" />
        </shape>
    </item>
</layer-list>
