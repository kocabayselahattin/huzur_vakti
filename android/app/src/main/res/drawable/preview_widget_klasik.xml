<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan gradient -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#FF8C42"
                android:endColor="#CC5522"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Üst bar - vakit adı -->
    <item android:top="12dp" android:left="16dp" android:right="16dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#50FFFFFF" />
        </shape>
    </item>
    
    <!-- Orta - büyük sayaç alanı -->
    <item android:top="35dp" android:left="16dp" android:right="60dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#70FFFFFF" />
        </shape>
    </item>
    
    <!-- Alt bar - konum -->
    <item android:top="75dp" android:left="16dp" android:right="100dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>
