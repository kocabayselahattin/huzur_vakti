<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cam efekti arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#80AAAAAA"
                android:endColor="#60888888"
                android:angle="135" />
            <stroke
                android:width="1dp"
                android:color="#80FFFFFF" />
        </shape>
    </item>
    
    <!-- Üst parlama -->
    <item android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp" android:topRightRadius="20dp" />
            <gradient
                android:startColor="#50FFFFFF"
                android:endColor="#00FFFFFF"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Merkez içerik alanı -->
    <item android:top="25dp" android:left="20dp" android:right="20dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#40FFFFFF" />
        </shape>
    </item>
</layer-list>
