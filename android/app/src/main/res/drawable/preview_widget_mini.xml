<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan gradient - sunset renkleri -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:startColor="#FFE4B5"
                android:endColor="#FFD0A0"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Üst bar -->
    <item android:top="10dp" android:left="14dp" android:right="14dp" android:bottom="55dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#40795548" />
        </shape>
    </item>
    
    <!-- Orta - sayaç -->
    <item android:top="30dp" android:left="14dp" android:right="50dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#50795548" />
        </shape>
    </item>
    
    <!-- Alt bar -->
    <item android:top="60dp" android:left="14dp" android:right="90dp" android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#30795548" />
        </shape>
    </item>
</layer-list>
