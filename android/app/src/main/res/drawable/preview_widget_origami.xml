<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ana arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#FFF8E7" />
        </shape>
    </item>
    
    <!-- Origami katı 1 -->
    <item android:top="0dp" android:left="0dp" android:right="100dp" android:bottom="60dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="20dp" />
            <solid android:color="#FFECCC" />
        </shape>
    </item>
    
    <!-- Üst bar -->
    <item android:top="12dp" android:left="16dp" android:right="16dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#40455A64" />
        </shape>
    </item>
    
    <!-- Orta - sayaç -->
    <item android:top="35dp" android:left="16dp" android:right="50dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#60263238" />
        </shape>
    </item>
    
    <!-- Alt bar -->
    <item android:top="75dp" android:left="16dp" android:right="90dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#30607D8B" />
        </shape>
    </item>
</layer-list>
