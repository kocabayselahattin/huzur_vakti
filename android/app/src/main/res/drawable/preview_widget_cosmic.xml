<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Kozmik arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:startColor="#0D0221"
                android:centerColor="#190A3D"
                android:endColor="#3D1A78"
                android:angle="135" />
        </shape>
    </item>
    
    <!-- Üst bar - mor -->
    <item android:top="12dp" android:left="16dp" android:right="16dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#40E040FB" />
        </shape>
    </item>
    
    <!-- Orta - sayaç beyaz -->
    <item android:top="35dp" android:left="16dp" android:right="50dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#70FFFFFF" />
        </shape>
    </item>
    
    <!-- Alt bar - cyan -->
    <item android:top="75dp" android:left="16dp" android:right="90dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#4000BCD4" />
        </shape>
    </item>
</layer-list>
