<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Koyu arka plan -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#0D1B2A" />
        </shape>
    </item>
    
    <!-- Neon border -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="#00FFFF" />
        </shape>
    </item>
    
    <!-- Üst bar - cyan -->
    <item android:top="12dp" android:left="14dp" android:right="14dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#4000FFFF" />
        </shape>
    </item>
    
    <!-- Orta - sayaç -->
    <item android:top="35dp" android:left="14dp" android:right="40dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#60FF00FF" />
        </shape>
    </item>
    
    <!-- Alt bar -->
    <item android:top="75dp" android:left="14dp" android:right="80dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#3000FFFF" />
        </shape>
    </item>
</layer-list>
