<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan açık -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#F5F5F5" />
        </shape>
    </item>
    
    <!-- Sol kenar mavi çizgi -->
    <item android:left="0dp" android:right="185dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="16dp" android:bottomLeftRadius="16dp" />
            <solid android:color="#1976D2" />
        </shape>
    </item>
    
    <!-- Üst bar -->
    <item android:top="12dp" android:left="18dp" android:right="16dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#401976D2" />
        </shape>
    </item>
    
    <!-- Orta - sayaç -->
    <item android:top="35dp" android:left="18dp" android:right="50dp" android:bottom="30dp">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="#60212121" />
        </shape>
    </item>
    
    <!-- Alt bar -->
    <item android:top="75dp" android:left="18dp" android:right="90dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <solid android:color="#30757575" />
        </shape>
    </item>
</layer-list>
