<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_cuma"
    android:padding="16dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CUMA NAMAZI"
            android:textColor="#FFD700"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cuma_sayac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2g 04:32"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_cuma_tarih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuma, 12:30"
        android:textColor="#AAAAAA"
        android:textSize="12sp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_cuma_hadis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cumada bir saat vardir ki..."
        android:textColor="#FFD70088"
        android:textSize="10sp"
        android:textStyle="italic"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:gravity="center" />

</LinearLayout>
