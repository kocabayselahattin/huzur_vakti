<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_minimal_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@drawable/widget_background_transparent">

    <!-- Dairesel arka plan -->
    <ImageView
        android:id="@+id/img_circle_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/widget_circle_progress"
        android:scaleType="fitCenter" />

    <!-- Merkez içerik -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_vakit_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKŞAM"
            android:textColor="#4FC3F7"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/tv_vakit_saati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:45"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tv_kalan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2s 15dk"
            android:textColor="#B0BEC5"
            android:textSize="10sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

</FrameLayout>
