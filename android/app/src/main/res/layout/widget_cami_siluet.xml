<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_dark_mosque"
    android:padding="16dp">

    <!-- Sol Üst: Vakit Adı ve Saati -->
    <LinearLayout
        android:id="@+id/top_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tv_sonraki_vakit_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İmsak Vaktine"
            android:textColor="#AACCEE"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⏱"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_sonraki_vakit_saati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:48"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Sağ Üst: Gün ve Tarih -->
    <LinearLayout
        android:id="@+id/top_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="end">

        <TextView
            android:id="@+id/tv_gun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cumartesi"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_aciklama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vakitler"
            android:textColor="#AACCEE"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_miladi_tarih"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17.01.2026"
            android:textColor="#88AABB"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Orta Sol: Büyük Geri Sayım -->
    <LinearLayout
        android:id="@+id/countdown_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_left"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kalan Süre"
            android:textColor="#6699BB"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:35"
                android:textColor="#FFFFFF"
                android:textSize="42sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed" />

            <TextView
                android:id="@+id/tv_countdown_saniye"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46"
                android:textColor="#AACCEE"
                android:textSize="18sp"
                android:layout_marginStart="2dp"
                android:layout_marginBottom="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Orta Sağ: Üst 3 Vakit -->
    <LinearLayout
        android:id="@+id/vakitler_ust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_right"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tv_imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:48"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İmsak Vakti"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tv_gunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:21"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Güneşin Doğuşu"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_ogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:14"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğle Namazı"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Alt: Alt 3 Vakit -->
    <LinearLayout
        android:id="@+id/vakitler_alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/vakitler_ust"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tv_ikindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:33"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkindi Namazı"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:id="@+id/tv_aksam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:55"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam Namazı"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_vakit_box_blue"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:21"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yatsı Namazı"
                android:textColor="#88BBDD"
                android:textSize="8sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- En Alt: Günün Hadisi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Günün Hadisi"
            android:textColor="#6699BB"
            android:textSize="9sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tv_hadis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allahım! Günahlarımı, bilgisizlik yüzünden yaptıklarımı, işimdeki aşırılıkları ve benden daha iyi bildiğin bütün kusurlarımı bağışla..."
            android:textColor="#88AABB"
            android:textSize="9sp"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</RelativeLayout>
