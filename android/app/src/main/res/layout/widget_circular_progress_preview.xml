<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_circular"
    android:padding="8dp">

    <!-- Üst Başlık -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstanbul"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="28 Recep 1447"
            android:textColor="#FFFFFF"
            android:textSize="9sp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Merkez Dairesel Kısım -->
    <RelativeLayout
        android:id="@+id/circular_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <!-- Dairesel Progress -->
        <FrameLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/circular_bg_ring">

            <!-- Merkez İçerik -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp">

                <!-- Yüzde -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="65%"
                    android:textColor="#4CAF50"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <!-- Ecir / Kaza -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ECİR"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:alpha="0.7" />

            </LinearLayout>
        </FrameLayout>

    </RelativeLayout>

    <!-- Alt Kısım -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="2dp">

        <!-- Sonraki Vakit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Öğle Vaktine"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:layout_marginBottom="2dp" />

        <!-- Geri Sayım -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:30:45"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginBottom="4dp" />

        <!-- Alt Ecir Barı - ImageView ile -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#26A69A"
            android:contentDescription="@null" />

    </LinearLayout>

</RelativeLayout>
