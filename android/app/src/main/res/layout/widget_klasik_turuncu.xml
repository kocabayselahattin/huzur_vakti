<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_orange"
    android:padding="12dp">

    <!-- Üst Kısım: Logo ve Başlık -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAMAZ"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VAKTİ"
            android:textColor="#FFE0B0"
            android:textSize="12sp"
            android:layout_marginStart="2dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_sonraki_vakit_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İmsak Vaktine Kalan Süre"
            android:textColor="#FFFFFF"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Orta Kısım: Büyük Sayaç ve Tarih -->
    <LinearLayout
        android:id="@+id/middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Sol: Büyük Sayaç -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="07:25:12"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

        <!-- Sağ: Tarih ve Konum -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_hicri_tarih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Rebiulahir 1436"
                android:textColor="#FFFFFF"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_konum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KOCAELİ"
                android:textColor="#FFE0B0"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Alt Kısım: Vakit Listesi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/middle"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İMSAK"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:41"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GÜNEŞ"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_gunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:11"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ÖĞLE"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_ogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:19"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İKİNDİ"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_ikindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14:51"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKŞAM"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_aksam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:16"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YATSI"
                android:textColor="#FFE0B0"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/tv_yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:39"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
