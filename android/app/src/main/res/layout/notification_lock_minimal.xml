        android:id="@+id/tv_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2:34"
        android:textSize="28sp"
        android:textColor="#FF7043"
        android:textStyle="bold" />

</LinearLayout>
