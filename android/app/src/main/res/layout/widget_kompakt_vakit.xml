<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_kompakt_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background_rounded">

    <!-- Sol taraf: Vakit adı ve simge -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_vakit_adi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AKŞAM"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <TextView
            android:id="@+id/tv_kalan_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2s 15dk kaldı"
            android:textColor="#B0BEC5"
            android:textSize="11sp"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Sağ taraf: Vakit saati -->
    <TextView
        android:id="@+id/tv_vakit_saati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="17:45"
        android:textColor="#4FC3F7"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light" />

</LinearLayout>
