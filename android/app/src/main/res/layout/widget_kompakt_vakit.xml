<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_card_light"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/top_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Chronometer
            android:id="@+id/text_geri_sayim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/widget_countdown_box_light"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="01:21"
            android:textColor="#1B2C47"
            android:textSize="18sp"
            android:textStyle="bold"
            android:format="%s" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/text_sonraki_vakit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam Vaktine Kalan"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/text_konum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İstanbul, Küçükçekmece"
                android:textColor="#1B2C47"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_date_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17 Ocak 2026"
                android:textColor="#000000"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_hicri_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28 Recep 1447"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vakit_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_row"
        android:layout_marginTop="4dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/box_imsak_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_imsak_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İmsak"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_imsak_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:50"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_gunes_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_gunes_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Güneş"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_gunes_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08:20"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_ogle_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_ogle_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğle"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_ogle_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:20"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_ikindi_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_ikindi_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkindi"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_ikindi_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:47"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_aksam_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:layout_marginEnd="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_aksam_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_aksam_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:10"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/box_yatsi_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/widget_vakit_inactive_light"
            android:padding="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_yatsi_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yatsı"
                android:textColor="#000000"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/tv_yatsi_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:34"
                android:textColor="#1B2C47"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
