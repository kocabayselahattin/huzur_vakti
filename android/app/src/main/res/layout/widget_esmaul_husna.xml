<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_esma_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp"
    android:background="@drawable/widget_background_gold">

    <!-- Arapça isim -->
    <TextView
        android:id="@+id/tv_esma_arapca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="الرحمن"
        android:textColor="#FFD700"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Türkçe okunuş ve anlam -->
    <TextView
        android:id="@+id/tv_esma_turkce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ER-RAHMÂN"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tv_esma_anlam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Çok merhametli"
        android:textColor="#B0BEC5"
        android:textSize="10sp"
        android:layout_marginTop="2dp" />

</LinearLayout>
