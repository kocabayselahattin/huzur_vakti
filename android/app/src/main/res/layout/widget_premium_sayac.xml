<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_premium_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/widget_background_gradient">

    <!-- Sonraki vakit başlığı -->
    <TextView
        android:id="@+id/tv_sonraki_vakit_baslik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AKŞAM VAKTİNE"
        android:textColor="#B0BEC5"
        android:textSize="12sp"
        android:letterSpacing="0.15" />

    <!-- Büyük geri sayım -->
    <TextView
        android:id="@+id/tv_geri_sayim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="02:45:33"
        android:textColor="#FFFFFF"
        android:textSize="42sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-thin"
        android:letterSpacing="0.05"
        android:layout_marginVertical="8dp" />

    <!-- İlerleme çubuğu -->
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:max="100"
        android:progress="70"
        android:progressDrawable="@drawable/widget_progress_bar" />

    <!-- Takvim bilgisi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/tv_miladi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Ocak 2026"
            android:textColor="#78909C"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  •  "
            android:textColor="#546E7A"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_hicri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22 Recep 1447"
            android:textColor="#4FC3F7"
            android:textSize="10sp" />

    </LinearLayout>

</LinearLayout>
