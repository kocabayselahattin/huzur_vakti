<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/widget_background_ayet"
    android:padding="16dp"
    android:gravity="center">

    <!-- Besmele -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="بِسْمِ اللّٰهِ الرَّحْمٰنِ الرَّحِيمِ"
        android:textColor="#FFD70088"
        android:textSize="12sp"
        android:fontFamily="serif" />

    <!-- Arapça Ayet -->
    <TextView
        android:id="@+id/tv_ayet_arapca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="إِنَّ مَعَ الْعُسْرِ يُسْرًا"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Meal -->
    <TextView
        android:id="@+id/tv_ayet_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Şüphesiz zorlukla birlikte kolaylık vardır."
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginTop="8dp" />

    <!-- Kaynak -->
    <TextView
        android:id="@+id/tv_ayet_kaynak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İnşirah Suresi, 6"
        android:textColor="#888888"
        android:textSize="10sp"
        android:layout_marginTop="8dp" />

</LinearLayout>
