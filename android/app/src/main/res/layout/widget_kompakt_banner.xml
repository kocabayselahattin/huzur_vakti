<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_card_dark"
    android:padding="6dp">

    <!-- Üst Bilgi -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_location_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="İstanbul, Küçükçekmece"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/tv_date_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Ocak 2026 • 28 Recep 1447"
            android:textColor="#AAB3C2"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Büyük Grid (4x2) -->
    <LinearLayout
        android:id="@+id/layout_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_sonraki_label_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sonraki Vakit"
                    android:textColor="#AAB3C2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_sonraki_adi_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AKŞAM"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kalan Süre"
                    android:textColor="#AAB3C2"
                    android:textSize="11sp" />

                <Chronometer
                    android:id="@+id/tv_countdown_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:36"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:format="%s" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/box_imsak_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_imsak_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İMSAK"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_imsak_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="06:50"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_gunes_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_gunes_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÜNEŞ"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gunes_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="08:20"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_ogle_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_ogle_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ÖĞLE"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ogle_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="13:20"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/box_ikindi_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_ikindi_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İKİNDİ"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ikindi_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="15:47"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_aksam_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:layout_marginEnd="4dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_aksam_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AKŞAM"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_aksam_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="18:10"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/box_yatsi_grid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/widget_vakit_inactive_dark"
                android:padding="8dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/label_yatsi_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="YATSI"
                    android:textColor="#C9D2E3"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_yatsi_grid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="19:34"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Geniş 4x1 Görünüm -->
    <LinearLayout
        android:id="@+id/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/box_imsak_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_imsak_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İms"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_imsak_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06:50"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_gunes_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_gunes_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gün"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_gunes_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:20"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_ogle_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_ogle_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Öğle"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_ogle_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13:20"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/box_ikindi_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_ikindi_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="İkindi"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_ikindi_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15:47"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_aksam_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:layout_marginEnd="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_aksam_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akşam"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_aksam_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:10"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/box_yatsi_row"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/widget_vakit_inactive_dark"
                    android:padding="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_yatsi_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yatsı"
                        android:textColor="#C9D2E3"
                        android:textSize="8sp" />

                    <TextView
                        android:id="@+id/tv_yatsi_row"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19:34"
                        android:textColor="#FFFFFF"
                        android:textSize="11sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_sonraki_label_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam Vaktine Kalan"
                android:textColor="#AAB3C2"
                android:textSize="10sp" />

            <Chronometer
                android:id="@+id/tv_countdown_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:07"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:format="%s" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
