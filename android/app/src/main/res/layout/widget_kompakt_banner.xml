<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_light"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- Üst Satır: Şehir, Hicri Tarih, Geri Sayım -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Şehir İkonu ve Adı -->
        <TextView
            android:id="@+id/tv_sehir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gaziantep"
            android:textColor="#CC5522"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableStart="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="4dp"
            android:drawableTint="#CC5522" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- Hicri Tarih -->
        <TextView
            android:id="@+id/tv_hicri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1442, Recep 8"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" - "
            android:textColor="#999999"
            android:textSize="12sp" />

        <!-- Geri Sayım -->
        <TextView
            android:id="@+id/tv_sonraki_vakit_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabaha :"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="07:17"
            android:textColor="#CC5522"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Alt Satır: Tüm Vakitler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <!-- İmsak -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İmsak"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_imsak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:47"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sabah -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabah"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_gunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:06"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Güneş -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Güneş"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_gunes2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:06"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Öğle -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Öğle"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:49"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- İkindi -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkindi"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_ikindi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15:53"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Akşam -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akşam"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_aksam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18:22"
                android:textColor="#444444"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Yatsı -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yatsı"
                android:textColor="#888888"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_yatsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19:37"
                android:textColor="#CC5522"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
