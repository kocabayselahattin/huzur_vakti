<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_sunset"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center_vertical">

    <!-- Sol: Mevcut Saat ve Sonraki 2 Vakit -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Güneş İkonu ve Mevcut Saat -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="☀️"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_saat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:47"
                android:textColor="#996633"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Sonraki 2 Vakit -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="12dp">

            <!-- İkindi -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/tv_vakit1_adi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="İkindi"
                    android:textColor="#996633"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_vakit1_saat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16:40"
                    android:textColor="#664422"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Akşam -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_vakit2_adi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Akşam"
                    android:textColor="#996633"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/tv_vakit2_saat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20:08"
                    android:textColor="#664422"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="40dp"
        android:background="#CCAA88"
        android:layout_marginHorizontal="12dp" />

    <!-- Sağ: Sonraki Vakit ve Geri Sayım -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Sonraki Vakit Adı ve Saati -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_sonraki_vakit_adi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="İkindi:"
                android:textColor="#885522"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_sonraki_vakit_saati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:40"
                android:textColor="#664422"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginStart="6dp" />
        </LinearLayout>

        <!-- Vaktin Çıkmasına -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vaktin Çıkmasına"
            android:textColor="#998866"
            android:textSize="11sp" />

        <!-- Geri Sayım -->
        <TextView
            android:id="@+id/tv_countdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1sa. 56 dk."
            android:textColor="#CC6622"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
